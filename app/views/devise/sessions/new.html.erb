<h2>Авторизация</h2>
<br/>
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div><%= f.label :email %><br />
  <%= f.email_field :email, :class => "input" %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password, :class => "input" %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label "Запомнить", :class => "label" %></div>
  <% end -%>

  <div class="actions"><br/><%= f.submit "Войти" %></div>
<% end %>

<div class="clear"></div>

<%= render :partial => "devise/shared/links" %>