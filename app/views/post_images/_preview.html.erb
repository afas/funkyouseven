<div id="<%= "post_image_#{target.id}" %>" class="image-upload-preview">
  <%= hidden_field_tag :post_id, target.post_id, :class => "upload_post_id" %>
  <%= image_tag target.image.url(:preview_item), :class => "upload_preview" %><br/>
  <%= label :title, "Заголовок фото" %><br/>
  <%= text_field_tag :title, target.title, :class => "upload_title", :onkeyup => "updateStuffImage(#{target.id}, 'post')" %><br/>
  <%= label :cover, "Обложка" %><%= check_box_tag :cover, target.cover, target.cover, :class => "upload_cover", :onchange => "updateStuffImage(#{target.id}, 'post')" %> / <%= label :preview, "Превью (список)" %> <%= check_box_tag :preview, target.preview, target.preview, :class => "upload_preview", :onchange => "updateStuffImage(#{target.id}, 'post')" %> / <%= link_to t('backend.actions.destroy'), "/post_images/destroy/#{target.id}", :remote => true %>
</div>