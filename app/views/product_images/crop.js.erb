current_width = <%= Utils.file_geometry(@image, :original).width %>;
current_height = <%= Utils.file_geometry(@image, :original).height %>;

width = <%= Utils.style_geometry(@image, :full).width %>;
height = <%= Utils.style_geometry(@image, :full).height %>;

var w_ratio = current_width / width;
var h_ratio = current_height / height;

var min_ratio = (w_ratio < h_ratio) ? w_ratio : h_ratio;

var w_select = Math.round(width * min_ratio);
var h_select = Math.round(height * min_ratio);

$("#default-popup").html("<%= escape_javascript( render( :partial => "product_images/crop", :locals => { :target => @image} ) ) %>");

openModal("#default-popup");

initCrop();