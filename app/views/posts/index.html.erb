<% unless @journal_numbers.empty? %>
    <div class="title_journal">
      <% current_number = @journal_numbers.size %>
      <p><%= current_number %> НОМЕР</p>
      <span><%= journal_date(@journal_numbers[@journal_numbers.size - current_number].created) %></span>
    </div>

    <% @posts.each_with_index do |post, i| %>
        <% if post != @posts.first && post.created_at.strftime("%Y%m") != @posts[i-1].created_at.strftime("%Y%m") %>
            <% current_number = current_number - 1 %>
            <div class="title_journal">
              <p><%= current_number %> НОМЕР</p>
              <span><%= journal_date(@journal_numbers[@journal_numbers.size - current_number].created) %></span>
            </div>
        <% end %>


        <%= render "posts/post_preview_item", :target => post, :second => true, :show_date => true, :no_margin => (i+1)%3 == 0 ? true : false %>

    <% end %>
<% end %>