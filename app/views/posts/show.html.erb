    <%= link_to '+Edit', edit_post_path(@post) %> <%= link_to '-Destroy', @post, confirm: 'Are you sure?', method: :delete %>

    <h1><%= @post.title %></h1>

    <div class="date"><%= raw "â€” #{@post.author.author_name}, " %><%= Russian::strftime(@post.created_at, "%d %B") %></div>
