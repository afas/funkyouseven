<%= form_for(@post, :html => {:multipart => true}) do |f| %>
    <% if @post.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

          <ul>
            <% @post.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <label><span>*</span><%= t("activerecord.attributes.post.title") %></label>
      <%= f.text_area :title, :class => "title" %>
    </div>

    <div class="field">
      <%= f.label :author_id %>
      <br/>
      <% if @post.new_record? %>
          <%= f.collection_select(:author_id, User.all, :id, :name || :email, :value => current_user.id, :promt => false) %>
      <% else %>
          <%= f.collection_select(:author_id, User.all, :id, :name || :email, :promt => false) %>
      <% end %>
    </div>
    <div class="field">
      <%= f.label :created_at %>
      <br/>
      <%= f.date_select :created_at %>
    </div>
    <div class="field">
      <%= f.label :description %>
      <br/>
      <%= f.text_area :description, :class => "span" %>
    </div>
    <div class="field">
      <%= f.label :content %>
      <br/>
      <%= f.text_area :content, :class => :markdown_field %>
    </div>
    <div class="field">
      <%= render :partial => 'post_images/files_upload', :locals => {:post => @post} %>
    </div>

    <div class="field">
      <%= f.label :short_url %>
      <%= f.text_field :short_url %>
    </div>

    <%= f.hidden_field :preview_id %>

    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>