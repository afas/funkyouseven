<%= form_for(@brand, :html => {:multipart => true}) do |f| %>
    <% if @brand.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@brand.errors.count, "error") %> prohibited this brand from being saved:</h2>

          <ul>
            <% @brand.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= image_tag @brand.logo.url(:preview_item) if @brand.logo_file_name? %>
      <%= f.label :logo %>
      <br/>
      <%= f.file_field :logo %>
    </div>

    <div class="field">
      <%= f.label :name %>
      <br/>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :site_url %>
      <br/>
      <%= f.text_field :site_url %>
    </div>
    <div class="field">
      <%= f.label :description %>
      <br/>
      <%= f.text_area :description, :class => :markdown_field %>
    </div>
    <div class="field">
      <%= f.label :short_url %>
      <br/>
      <%= f.text_field :short_url %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>