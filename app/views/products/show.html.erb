<div class="main_item">
  <div class="description">
    <form action="" method="get">
      <h1><%= @product.title %></h1>

      <h2><%= number_to_currency(@product.price.round, :precision => 0, :unit => "p.") %></h2>

      <p><%= @product.description %></p>

      <p><span>Цвет:</span> <%= @product.color %></p>

      <p><span>Состав:</span> <%= @product.composition %></p>

      <p><span>Сезон:</span> <%= @product.season %></p>

      <%= collection_select(:product_size, :id, ProductSize.collection("wear"), :code, :name, :promt => true) %>
      <div class="clear"></div>
      <a href="#" class="add">В корзину</a>

      <div class="clear"></div>
      <%= link_to "Все вещи #{@product.brand.name}", @product.brand, :class => "all_w" unless @product.brand.nil? %>
    </form>
  </div>

  <%= image_tag @product.get_cover.image.url(:full), :alt => @product.title, :id => :current_image %>

  <ul class="product_previews">
    <% @product.product_images.each do |image| %>
        <li>
          <div image_url="<%= image.image.url(:full) %>" style="background: url(<%= image.image.url(:preview_circle) %>) no-repeat scroll 0 0 transparent;"></div>
        </li>
    <% end %>
  </ul>

</div>

<%#= @product.brand_id %>
<%#= @product.sex_id %>
<%#= @product.career_id %>

<div class="relaited">Похожие товары</div>

<% @related_products.each_with_index do |product, i| %>
    <%= render "products/product_preview_item", :product => product, :cat_item => true, :margin_top => false, :container_class => (i+1)%3 == 0 ? "no_margin" : "" %>
<% end %>

<div class="clear"></div>
